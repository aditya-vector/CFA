<%= form_for(@campaign) do |f| %>
  <% if @campaign.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@campaign.errors.count, "error") %> prohibited this vendor from being saved:</h2>

      <ul>
      <% @campaign.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "campaign_name" %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label "Category" %><br />
    <%= f.collection_select :category_id, Category.all, :id, :name %>
  </div>
  <div class="field">
    <%= f.label "Campaign Type" %><br />
    <%= f.collection_select :campaign_type_id, CampaignType.all, :id , :name %>
  </div>
  <div class="field">
    <%= f.label "Description" %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label "Short Description" %><br />
    <%= f.text_area :shortdescription %>
  </div>
  <div class="field">
    <%= f.label "Vici Campaign Id" %><br />
    <%= f.text_area :vici_campaign_id %>
  </div>
  <div class="field">
    <%= f.label "Transcript Text" %><br />
    <%= f.text_area :transcript_text %>
  </div>
  <div class="field">
    <%= f.label "Transcript Audio File" %><br />
    <%= f.text_field :transcript_audio_file %>
  </div>
  <div class="field">
    <%= f.label "Campaign Start Date Time" %><br />
    <%= f.text_field :campaign_start_date_time %>
  </div>
  <div class="field">
    <%= f.label "Campaign_end_date_time" %><br />
    <%= f.text_field :campaign_end_date_time %>
  </div>
  
  <%= f.hidden_field :user_id, :value => current_user.id %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
